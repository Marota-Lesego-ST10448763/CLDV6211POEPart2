@model EventEase.Models.Event
@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="EventID" />

    <div class="form-group">
        <label asp-for="EventName"></label>
        <input asp-for="EventName" class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventTypeID">Event Type</label>
        <select asp-for="EventTypeID" asp-items="ViewBag.EventTypeId" class="form-select"></select>
        <span asp-validation-for="EventTypeID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EventDateTime">Date & Time</label>
        <input asp-for="EventDateTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="EventDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Venue</label>
        <select asp-for="VenueID" asp-items="ViewBag.VenueId" class="form-select"></select>
        <span asp-validation-for="VenueID" class="text-danger"></span>
    </div>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mb-2">
            <img src="@Model.ImageUrl" style="max-height: 100px;" class="img-thumbnail" />
        </div>
    }

    <div class="form-group">
        <label>Upload New Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
